<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <androidx.cardview.widget.CardView
            android:layout_width="386dp"
            android:layout_height="154dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.48"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.027">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <Button
                    android:id="@+id/btn_settings"
                    android:layout_width="94dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="146dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_toEndOf="@+id/profile_image"
                    android:text="Settings" />

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="116dp"
                    android:layout_height="36dp"
                    android:layout_below="@+id/tv_name"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="107dp"
                    android:layout_toEndOf="@+id/profile_image"
                    android:text="Email@.ru"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="114dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    app:srcCompat="@drawable/ic_character" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="133dp"
                    android:layout_height="26dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="108dp"
                    android:layout_toEndOf="@+id/profile_image"
                    android:text="Name"
                    android:textSize="24sp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="386dp"
            android:layout_height="154dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.35">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_fav_book"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="125dp"
                    android:text="My favourite book: "
                    android:textSize="20sp">
                </TextView>

                <TextView
                    android:id="@+id/tv_fav_char"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_fav_book"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="90dp"
                    android:text="My favourite character: "
                    android:textSize="20sp">
                </TextView>

                <TextView
                    android:id="@+id/tv_fav_season"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_fav_char"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="90dp"
                    android:text="My favourite season: "
                    android:textSize="20sp">
                </TextView>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="386dp"
            android:layout_height="170dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.70">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <ImageButton
                    android:id="@+id/books"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginEnd="241dp"
                    android:layout_marginBottom="17dp"
                    android:backgroundTint="#00000000"
                    android:contentDescription="Books"
                    android:onClick="onBook"
                    android:scaleType="center"
                    android:tag="Books"
                    android:tint="#000000"
                    app:layout_flexBasisPercent="@fraction/icon"
                    app:srcCompat="@drawable/ic_book" />

                <ImageButton
                    android:id="@+id/characters"
                    android:layout_width="wrap_content"
                    android:layout_height="110dp"
                    android:layout_alignStart="@+id/books"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="117dp"
                    android:layout_marginTop="19dp"
                    android:layout_marginEnd="121dp"
                    android:layout_marginBottom="25dp"
                    android:backgroundTint="#00FFFFFF"
                    android:onClick="onCharacter"
                    app:layout_flexBasisPercent="@fraction/icon"
                    app:srcCompat="@drawable/ic_character" />

                <ImageButton
                    android:id="@+id/houses"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_alignStart="@+id/characters"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="127dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="32dp"
                    android:backgroundTint="#00FFFFFF"
                    android:onClick="onHouse"
                    android:scaleType="center"
                    app:layout_flexBasisPercent="@fraction/icon"
                    app:srcCompat="@drawable/ic_castle" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>